{% extends 'base.html.twig' %}

{% block title %}Noodev - Tous les articles{% endblock %}
{% block header %}
    <div class="page-header header-filter header-small" data-parallax="true" style="background-image: url('{{asset('assets/img/bg9.jpg')}}');">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h1 class="title text-center">Recherche</h1>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div class="main main-raised">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8 col-md-offset-1">
                    <h2 class="title">Tous les articles</h2>
                    <br />
                    <div class="row">
                        {% for article in articles %}
                            <div class="col-md-4">
                                <div class="card card-plain card-blog">
                                    <a href="{{ path('single_blog', {'slug':article.slug}) }}" data-article="{{ article.id }}" class="article-view">
                                        <div class="card-image">
                                            <img class="img img-raised" src="{{ asset('assets/allImg/'~article.thumbnail_img) }}" />
                                        </div>
                                    </a>
                                    <div class="card-content">
                                        <h6 class="category text-info">{{ article.name }}</h6>
                                        <h4 class="card-title">
                                            <a href="{{ path('single_blog', {'slug':article.slug}) }}">{{ article.title }}</a>
                                        </h4>
                                        <p class="card-description">
                                            {{ article.description }}<a href="{{ path('single_blog', {'slug':article.slug}) }}"> Voir plus </a>
                                        </p>

                                        <p class="author text-right"><i class="material-icons">remove_red_eye</i>{{ article.views }} <i class="material-icons">calendar_today</i> {{ article.created_at|date('d-m-y') }}</p>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <p>Aucun article</p>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-md-2">

                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('assets/js/scripts.js') }}"></script>
{% endblock %}