{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="page-header header-filter" style="background-image: url('{{ asset('assets/img/bg9.jpg') }}'); background-size: cover; background-position: top center;">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                <div class="card card-signup">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                        </div>
                        {% else %}
                            <form class="form" method="post">
                                <div class="header header-success text-center">
                                    <h4 class="card-title">Connexion</h4>
                                    <!--
                                    <div class="social-line">
                                        <a href="#pablo" class="btn btn-just-icon btn-simple">
                                            <i class="fa fa-facebook-square"></i>
                                        </a>
                                        <a href="#pablo" class="btn btn-just-icon btn-simple">
                                            <i class="fa fa-twitter"></i>
                                        </a>
                                        <a href="#pablo" class="btn btn-just-icon btn-simple">
                                            <i class="fa fa-google-plus"></i>
                                        </a>
                                    </div>
                                    -->
                                </div>
                                <div class="card-content">

                                    <div class="input-group">
									<span class="input-group-addon">
										<i class="material-icons">email</i>
									</span>
                                        <input type="text" class="form-control" placeholder="Email..." value="{{ last_username }}" name="email" id="inputEmail" required>
                                    </div>

                                    <div class="input-group">
									<span class="input-group-addon">
										<i class="material-icons">lock_outline</i>
									</span>
                                        <input type="password" placeholder="Mot de passe..." class="form-control" name="password" id="inputPassword" required/>
                                    </div>

                                    <!-- If you want to add a checkbox to this form, uncomment this code

                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="optionsCheckboxes" checked>
                                            Subscribe to newsletter
                                        </label>
                                    </div> -->
                                </div>
                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                >
                                <div class="footer text-center">
                                    <a href="{{ path('reset-password') }}">Mot de passe Oublié ?</a>
                                    <button type="submit" class="btn btn-primary btn-simple btn-wd btn-lg">Connexion</button>
                                </div>

                            </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
